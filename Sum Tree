import java.util.*;
class Node
{
    int data;
    Node left, right;

    Node(int item)
    {
        data = item;
        left = right = null;
    }
}
class Solution {
    boolean isSumTree(Node root) {
       return check(root)!=-1;
    }
    private static int check(Node node){
        if (node == null) return 0;
        
        if (node.left == null && node.right == null) return node.data;
        
        int leftSum = check(node.left);
        int rightSum = check(node.right);
        
        if (leftSum == -1 || rightSum == -1) return -1;
        if (node.data != leftSum + rightSum) return -1;

      
        return node.data + leftSum + rightSum;
    }
 public static void main(String[] args) {
        Node root = new Node(26);
        root.left = new Node(10);
        root.right = new Node(3);
        root.left.left = new Node(4);
        root.left.right = new Node(6);
        root.right.right = new Node(3);

        Solution sol = new Solution();
        System.out.println(sol.isSumTree(root));  // true
    }
    
}
